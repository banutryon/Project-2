<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
  <%- include ('../partials/boot.ejs') %>
  <%- include ('../partials/head.ejs') %>

  <link rel="stylesheet" href="/carousel.css">
  <link rel="stylesheet" href="/nav.css">
  <link rel="stylesheet" href="/show.css">
  <meta charset="utf-8">
  <title></title>
</head>

<body>
  <div class="collapse" id="navbarToggleExternalContent">
    <div class="bg-dark p-4">

      <% if (currentUser) { %>
      <h4>Welcome <%= currentUser.username %></h4>
      <a class="navlink" href="/tryon-experiences/new">Create a new Location</a>
      <a class="navlink" href="/tryon-experiences/setup/seed">Seed</a>
      <!-- Edit Button -->
      <a class="navlink" href="/tryon-experiences/<%=location._id%>/edit">Edit Location</a>
      <!-- =Delete Button======== -->
      <form action="/tryon-experiences/<%=location.id%>?_method=DELETE" method="POST">
        <input class="navlink" type="submit" value="Delete" class="btn-small red" />
      </form>
      <!-- =LogOut Button======== -->
      <form action="/sessions?_method=DELETE" method="POST">
        <input class="navlink" type="submit" value="Log Out" class="btn-small red" />
      </form>
      <% } else { %>
      <a class="navlink" href="/users/new">Sign Up</a>
      <a class="navlink" href="/sessions/new">Log In</a>
      <style>
        .p-4 {
          height: 100px;
        }
      </style>
      <% } %>
    </div>
  </div>
  <nav class="navbar navbar-dark bg-dark">
    <div class="container-fluid">
      <a class="navlink" href="/tryon-experiences/home" class="brand-logo left">Home</a>
      <h2><%= location.name %></h2>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarToggleExternalContent" aria-controls="navbarToggleExternalContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
    </div>
  </nav>

  <!-- ==========Main Page=============== -->
  <!-- ==========Carousel 1 Page=============== -->

  <form action="/register" method="POST">
    <fieldset class="info">
      <div id="myCarousel" class="carousel slide box1" data-bs-ride="carousel">
        <ol class="carousel-indicators">
          <li data-bs-target="#myCarousel" data-bs-slide-to="0" class="active"></li>
          <li data-bs-target="#myCarousel" data-bs-slide-to="1"></li>
          <li data-bs-target="#myCarousel" data-bs-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">
          <div class="carousel-item active">
            <img src=<%= location.imgA %>>

            <div class="container">
              <div class="carousel-caption text-start">

              </div>
            </div>
          </div>
          <div class="carousel-item">
            <img src=<%= location.imgB %>>

            <div class="container">
              <div class="carousel-caption">

              </div>
            </div>
          </div>
          <div class="carousel-item">
            <img src=<%= location.imgC %>>
            <div class="container">
              <div class="carousel-caption text-end">

              </div>
            </div>
          </div>
        </div>
        <a class="carousel-control-prev" href="#myCarousel" role="button" data-bs-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Previous</span>
        </a>
        <a class="carousel-control-next" href="#myCarousel" role="button" data-bs-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Next</span>
        </a>
      </div>
      <!-- ==========Carousel 2 Page=============== -->

      <div id="myCarousel" class="carousel slide box2" data-bs-ride="carousel">

        <div class="carousel-inner ">
          <div class="carousel-item active wordBox ">
            <div class="container ">
              <div class="carousel-caption text-start ">
                <h1 class="headText"><%= location.hA %></h1>
                <p class="pText"><%= location.textA %></p>
              </div>
            </div>
          </div>
          <div class="carousel-item wordBox">
            <div class="container">
              <div class="carousel-caption">
                <h1 class="headText"><%= location.hB %></h1>
                <p class="pText"><%= location.textB %></p>
              </div>
            </div>
          </div>
          <div class="carousel-item wordBox">
            <div class="container">
              <div class="carousel-caption text-end">
                <h1 class="headText"><%= location.hC %></h1>
                <p class="pText"><%= location.textC %></p>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- ==========Bottom Box =============== -->
      <div class="bottomBox">

        <label for="description">Description:
          <p id="description"> <%= location.description %></p>
        </label>
        <div class="map">

          <a href="<%= location.map %>"><img src=<%= location.mapImg %> /></a>
        </div>
      </div>
    </fieldset>
  </form>
  </div>
  </div>
  <footer>
  <%- include ('../partials/footer.ejs') %>
</footer>




</body>

</html>
