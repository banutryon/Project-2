  <script src="../assets/dist/js/bootstrap.bundle.min.js"></script>
  <script type="text/javascript">
    function multiplyBy() {
      const cost = 49
      headcount = document.getElementById("headcount").value;
      document.getElementById("result").innerHTML = headcount * cost;
      document.getElementById("total").innerHTML = headcount * cost - 10;
    }
  </script>

